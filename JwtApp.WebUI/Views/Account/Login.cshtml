@model UserLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Login</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <form class="w-75 m-5 p-3 shadow mx-auto" asp-action="Login" asp-controller="Account" method="post">
            <div class="mb-3">
                <label for="@Model.Username" class="form-label">Username : </label>
                <span class="text-danger" asp-validation-for="@Model.Username"></span>
                <input class="form-control" type="text" asp-for="@Model.Username"/>
            </div>
             <div class="mb-3">
                <label for="@Model.Password" class="form-label">Password : </label>
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                <input class="form-control" type="password" asp-for="@Model.Password" />
            </div>
            <div class="mb-3">
                <button class="btn btn-success w-100">Login</button>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
    <style src="~/bootstrap/js/bootstrap.bundle.min.js"></style>
</body>
</html>