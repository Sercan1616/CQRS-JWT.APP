@model List<CategoryListModel>
@{
    Layout = "_Layout";
}

@{
    if (Model.Count > 0)
    {
        <div class="text-end">
            <a asp-action="Create" asp-controller="Category">Create New Category</a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Definition</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Definition</td>
                        <td>
                            <a class="btn btn-danger" asp-action="Remove" asp-controller="Category" asp-route-id="@category.Id">Remove</a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    }
    else
    {
        <div class="text-center">Herhangi bir kayıt bulunamadı</div>
    }
}
