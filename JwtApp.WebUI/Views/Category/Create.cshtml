@model CreateCategoryModel
@{
    Layout = "_Layout";
}

<div>
    <p>
        Bu ekranda yeni kategori eklersiniz.
    </p>
</div>
<div class="container">
    <form class="w-75 m-5 p-3 mx-auto" asp-action="Create" asp-controller="Category" method="post">
        <div class="mb-3">
            <label for="@Model.Definition" class="form-label"> Category Definition : </label>
            <span class="text-danger" asp-validation-for="@Model.Definition"></span>
            <input class="form-control" type="text" asp-for="@Model.Definition" />
        </div>
        <div class="mb-3">
            <button class="btn btn-success w-100">Save</button>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>

